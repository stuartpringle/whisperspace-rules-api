{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["incomingDamage"],
  "properties": {
    "incomingDamage": {"type": "integer", "minimum": 0},
    "stressDelta": {"type": "integer", "minimum": 0},
    "unmitigated": {"type": "boolean"},
    "armour": {
      "type": "object",
      "properties": {
        "protection": {"type": "integer"},
        "durability": {
          "type": "object",
          "properties": {
            "current": {"type": "integer"},
            "max": {"type": "integer"}
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "wounds": {
      "type": "object",
      "properties": {
        "light": {"type": "integer"},
        "moderate": {"type": "integer"},
        "heavy": {"type": "integer"}
      },
      "additionalProperties": true
    },
    "stress": {
      "type": "object",
      "properties": {
        "current": {"type": "integer"},
        "cuf": {"type": "integer"},
        "cufLoss": {"type": "integer"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
